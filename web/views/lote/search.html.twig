{% extends 'ag_base/backend.html.twig' %}

{% block body_params %}class="skin-black"{% endblock %}

{% block javascripts %}

    {{ parent() }}

{% endblock %}

{% block container %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include 'menu.html.twig' with {'option': 'lote_list'} %}

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">                
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Procurar Item
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                <div class="row">
                    <div class="col-xs-12">

                        {% include 'ag_alerts.html.twig' %}

                        <div class="box">
                            <div class="box-header">

                            </div><!-- /.box-header -->

                            <div class="box-body table-responsive">
                                <div class="form-group">

                                    <form method="post">
                                        <label for="busca">Nome/Código:</label>
                                        <input type="text" id="busca" name="busca" required="required" class="form-control">
                                        
                                        <br />
                                        
                                        <button type="submit" class="btn btn-primary">Buscar</button>
                                    </form>
                                </div>
                                
                                {% if rows|length > 0 %}
                                
                                    <hr />
                                    
                                    <table id="lote_list" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Item</th>
                                                <th>Lote</th>
                                                <th>Facção</th>
                                                <th>Ações</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for item in rows %}
                                            <tr>
                                                <td>{{ item.NOME }}</td>
                                                <td>{{ item.LOTE_NUMERO }}</td>
                                                <td>{{ item.FACCAO }}</td>
                                                <td><a href="{{ path('lote_edit', { id: item.LOTE_ID }) }}" class="btn btn-primary btn-xs">Visualizar Lote</a></td>
                                            </tr> 
                                            {% endfor %}

                                        </tbody>
                                    </table>
                                    
                                {% endif %}
                                    
                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div>
                </div>

            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->

{% endblock %}
